{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "rootDir": ".",
    "baseUrl": "src",
    "outDir": "dist",
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "declaration": true,
    "composite": false,
    "lib": ["es2019", "dom"],
    "module": "esnext",
    "types": ["react", "jest", "node"],
    "jsx": "react",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "paths": {
      "*": ["src/utils/types/*.ts"],
      "~/*": ["*"]
    }
  },
  "include": ["src/assets-module.d.ts", "src/**/*", "src/utils/types/*.ts", "tests/**/*"],
  "exclude": ["node_modules"]
}
